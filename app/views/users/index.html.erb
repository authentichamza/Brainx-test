<p style='color: green'><%= notice %></p>
<div>
  <h1>Repositories</h1>
  <%= link_to('Repositories', repositories_path) %><br>
  <%= link_to 'Create User', new_user_path %>
</div>
<br>
<table class='table'>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>

  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.email %></td>

    <td><%= button_to 'Show', user_path(user), method: :get  %><%= button_to 'Edit', edit_user_path(user), method: :get  %><%= button_to 'Destroy', user, method: :delete %></td>
  </tr>
<% end %>
</table>
</div>
